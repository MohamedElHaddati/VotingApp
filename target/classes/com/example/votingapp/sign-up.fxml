<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="269.0" prefWidth="388.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.votingapp.Controllers.RegisterController">
   <children>
      <StackPane prefHeight="230.0" prefWidth="309.0">
         <children>
            <VBox prefHeight="175.0" prefWidth="368.0" spacing="10.0">
               <children>
                  <GridPane prefWidth="582.0">
                     <children>
                        <HBox prefHeight="60.0" prefWidth="144.0" />
                        <Label text="Full Name" GridPane.rowIndex="1" />
                        <Label text="Email:" GridPane.rowIndex="2" />
                        <Label text="Username:" GridPane.rowIndex="3" />
                        <Label text="Password:" GridPane.rowIndex="4" />
                        <TextField fx:id="fullname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label prefHeight="30.0" prefWidth="84.0" text="Register">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints />
                     </rowConstraints>
                  </GridPane>
                  <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="264.0">
                     <children>
                        <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="276.0" textFill="#dc2020" visible="false" />
                        <Button fx:id="registerButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleRegister" prefHeight="26.0" prefWidth="84.0" text="Sign up" />
                     </children>
                  </HBox><Button fx:id="gotoLogin" alignment="CENTER" mnemonicParsing="false" onAction="#loadLoginView" prefHeight="37.0" prefWidth="368.0" text="Already have an account? Login" underline="true" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
